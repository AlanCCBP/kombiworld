generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String               @id @default(uuid())
  email            String               @unique
  password         String
  name             String
  lastName         String
  isAdmin          Boolean
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  deletedAt        DateTime?
  entrepreneurships Entrepreneurship[]
}

model Entrepreneurship {
  id               String        @id @default(uuid())
  name             String
  description      String
  website          String?
  logoUrl          String?
  phone            String
  address          String?
  city             String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  deletedAt        DateTime?
  userId           String
  user             User          @relation(fields: [userId], references: [id])
  socialMedia      SocialMedia[]
  locations        Location[]
  images           Image[]
  tags             String[]
}

model SocialMedia {
  id                  String            @id @default(uuid())
  platform            String
  url                 String
  entrepreneurshipId  String
  entrepreneurship    Entrepreneurship  @relation(fields: [entrepreneurshipId], references: [id])
}

model Location {
  id                  String            @id @default(uuid())
  latitude            Float?
  longitude           Float?
  entrepreneurshipId  String
  entrepreneurship    Entrepreneurship  @relation(fields: [entrepreneurshipId], references: [id])
}

model Image {
  id                  String            @id @default(uuid())
  url                 String
  entrepreneurshipId  String
  entrepreneurship    Entrepreneurship  @relation(fields: [entrepreneurshipId], references: [id])
}
